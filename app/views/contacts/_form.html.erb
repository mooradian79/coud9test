
<%= render 'shared/errors', obj: @contact %>

<div class="row">
  <div class="col-sm-12">
    <%= form_for(@contact, :html => {class: "form-horizontal", role: "form"}) do |f| %>

    
        <div class="form-group">
              
      
                <div class="col-xs-3 col-xs-offset-3">
                   <%= f.text_field :first_name, class: "form-control", placeholder: "First Name", autofocus: true %>
                </div>


                <div class="col-xs-3">
                   <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name"%>
                </div>
        </div>
 

         
      
               <div class="form-group">
                                
                  <div class= "col-xs-offset-3 col-xs-6">
                     <%= f.text_field :address, class: "form-control", placeholder: "Address"%>
                  </div>
                </div>
            
    
                <div class="form-group">
                  <div class="col-xs-offset-3 col-xs-3">
                     <%= f.text_field :city, class: "form-control", placeholder: "City" %>
                  </div>


                  <div class="col-xs-1">
                     <%= f.text_field :state, class: "form-control", placeholder: "State" %>
                  </div>
          
                  <div class="col-xs-2">
                      <%= f.text_field :zip, class: "form-control", placeholder: "Zipcode" %>
                  </div>
          
               </div>
    
    
              <div class="form-group">

                  <div class="col-xs-offset-3 col-xs-9">

                     <%= f.submit class: 'btn btn-primary btn-lg' %>

                  </div>
            </div>

<% end %>
 </div>
</div>

  <div class="col-md-4 col-md-offset-4">
     [ <%= link_to "Cancel request and return to Contacts List", contacts_path %> ]
  </div>

  </div>
</div>